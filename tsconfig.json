{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "target": "ES2020",
    "jsx": "react",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      //"App": ["src"],
      "@/*": ["./*"]
      //"Pages/*": ["src/Pages/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
